/* Styles de base */
body {
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
}

header {
  background-color: green;
  color: #fff;
  padding: 10px 0;
  text-align: center;
  border-radius: 15px; /* Augmentation du rayon de la bordure pour un aspect plus arrondi */
border: 2px solid #000; 
margin-left: 5.4cm;
}

nav ul {
  list-style: none;
}
.expense-list .add-button {
  background-color: #007bff; /* Couleur bleue */
  color: #fff;
}

.expense-list .edit-button {
  background-color: #007bff; /* Couleur bleue */
  color: #fff;
}

.expense-list .delete-button {
  background-color: #e74c3c; /* Couleur rouge */
  color: #fff;
}

.expense-list .add-button:hover,
.expense-list .edit-button:hover,
.expense-list .delete-button:hover {
  background-color: #0056b3; /* Couleur bleue plus sombre */
}

nav ul li {
  display: inline-block;
  margin-right: 20px;
}

nav a {
  text-decoration: none;
  color: #fff;
  transition: color 0.3s;
}

nav a:hover {
  color: #ffd700;
}

main {
  max-width: 1200px;
  
  padding: 20px;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-left: 7cm;
  margin-top: 1cm;
}

.transaction-form {
  text-align: center; /* Centrer le formulaire d'ajout de transaction */
}

.transaction-form form {
  display: inline-block; /* Mettre le formulaire en ligne */
}

.income-list,
.expense-list {
  text-align: center; /* Centrer la liste des transactions */
}

.footer {
  text-align: center;
  padding: 10px;
  background-color: #007bff;
  color: #fff;
}

  </style>
   <script>
    // Code JavaScript pour gérer la soumission du formulaire
    const form = document.querySelector('form');
    form.addEventListener('submit', async (event) => {
      event.preventDefault();
      const formData = new FormData(form);
      const response = await fetch('/add_depense', {
        method: 'POST',
        body: formData,
      });
      const data = await response.json();
      alert(data.message);
      form.reset(); // Réinitialiser le formulaire après l'insertion réussie
    });
  </script>
 
</head>
<body>
  <%- include('./sideBar') %>
  <header>
    <h1>Dépenses</h1>
   
      </header>
     
  <main>
    <section class="transaction-form">
      <h2>Ajouter une nouvelle dépense</h2>
      <form action="/users/depense" method="POST">
        <label for="Description">Description :</label>
        <input type="text" id="Description" name="Description" required>
        
        <label for="montant">Montant :</label>
        <input type="number" id="montant" name="montant" step="0.01" required>
       
        <label for="date">Date :</label>
        <input type="date" id="date" name="date" required>
        <label for="icon">catégorie:</label>
        <select id="icon" name="icon">
          <option value="alimentation">alimentation</option>
          <option value="transport">transport</option>
          <option value="cafe">café</option>
          <option value="famille">famille</option>
          <option value="sante">santé</option>
          <option value="loisirs">loisirs</option>
          <option value="sport">sport</option>
          <option value="autre">autre</option>
         
        </select>
        <button type="submit">Ajouter</button>
      </form>
    </section>
    
    <section class="expense-list">
      <h2>Liste des dépenses</h2>
      
      <ul>
        <% Depense.forEach(depense => { %>
          <li>
            <span class="description"><%= depense.description %></span>
            <span class="montant">$<%= depense.amount %></span>
            
            <div> 
              <a class="edit-button" href="/users/depense/update"><i class="fas fa-edit"></i></a>
             <a class="delete-button" href="/users/depense/delete/<%= depense.description%>"><i class="fas fa-trash"></i></a>
             
            
            </div>
          </li>
        <% }); %>
       
      </ul>
    </section>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const deleteButtons = document.querySelectorAll('.delete-button');
        deleteButtons.forEach(button => {
          button.addEventListener('click', event => {
            const itemId = event.target.getAttribute('data-id');
            if (itemId) {
              fetch(`/deleteDepense/${itemId}`, {
                method: 'DELETE',
              })
              .then(response => response.json())
              .then(data => {
                console.log(data.message);
                // Mettez à jour la liste des dépenses ici si nécessaire
              })
              .catch(error => {
                console.error("Erreur lors de la suppression de la dépense:", error);
              });
            }
          });
        });
      });
    </script>
    
    
    
    
    
    
  </main>
  
  <footer>
    <p>&copy; 2023 Gestion de Budget</p>
  </footer>
</body>
