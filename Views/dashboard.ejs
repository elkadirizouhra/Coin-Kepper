<!DOCTYPE html>
<!-- Coding By CodingNepal - codingnepalweb.com -->
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="/styles/userDashboard.css" type="text/css" />

    <!----===== Iconscout CSS ===== -->
    <link
      rel="stylesheet"
      href="https://unicons.iconscout.com/release/v4.0.0/css/line.css"
    />

    <title>Admin Dashboard Panel</title>
  </head>
  <body>
    <%- include('./sideBar') %>
    <section class="dashboard">
      <div class="dash-content">
        <div class="overview">
          <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Dashboard</span>
          </div>

          <div class="boxes">
            <div class="box box1">
              <i class="uil uil-money-withdraw"></i>
              <span class="text">Totale revenue</span>
              <span class="number"><%= totalRevenue %></span>
            </div>
            <div class="box box2">
              <i class="uil uil-money-withdrawal"></i>
              <span class="text">totale d√©pense</span>
              <span class="number"><%= totalExpenses %></span>
            </div>
            <div class="box box3">
              <i class="uil uil-moneybag"></i>
              <span class="text">Solde actuelle</span>
              <span class="number"><%= currentBalance %></span>
            </div>
          </div>
        </div>

        <div class="activity">
          <div class="title">
            <i class="uil uil-clock-three"></i>
            <span class="text">les derniers transactions</span>
          </div>
          <%- include('./table', { type: 'dashboard', data: lastTransactions })
          %>
        </div>
      </div>
    </section>

    <script type="text/javascript" src="/js/dashboard.js"></script>
  </body>
</html>
